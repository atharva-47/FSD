<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donation Tracker</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-4">

    <h2 class="text-center">Ek Muth Dhanya Collection</h2>

    
    <form action="/donate" method="POST" class="mb-4">
        <div class="mb-3">
            <input type="text" name="name" class="form-control" placeholder="Your Name" required>
        </div>
        <div class="mb-3">
            <input type="number" name="amount" class="form-control" placeholder="Donation Amount" required>
        </div>
        <button type="submit" class="btn btn-success">Donate</button>
    </form>

    
    <h3>Donations List</h3>
    <ul class="list-group">
        <% donations.forEach(donation => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><strong><%= donation.name %></strong> donated â‚¹<%= donation.amount %></span>
                <span>
                    <a href="/edit/<%= donation._id %>" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/delete/<%= donation._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </span>
            </li>
        <% }) %>
    </ul>

</body>
</html>
